<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>IRIS - PCC LIGNE 58</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/peerjs@1.5.2/dist/peerjs.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&family=JetBrains+Mono&display=swap" rel="stylesheet">
    <style>
        body { margin:0; background: #000; color: #00ff00; font-family: 'JetBrains Mono', monospace; }
        #map { height: 100vh; width: 100vw; filter: invert(100%) hue-rotate(180deg) brightness(0.6); }
        .console { position: absolute; bottom: 20px; left: 20px; width: 350px; height: 180px; 
                  background: rgba(0,0,0,0.85); border: 1px solid #00ff00; border-top: 4px solid #0088ff;
                  padding: 15px; z-index: 1000; overflow: hidden; box-shadow: 0 0 20px rgba(0,255,0,0.2); }
        .pulse { animation: pulse 2s infinite; }
        @keyframes pulse { 0% { r: 5; opacity: 1; } 100% { r: 15; opacity: 0; } }
    </style>
</head>
<body>

    <div id="map"></div>
    
    <div class="console">
        <h2 class="font-['Orbitron'] text-blue-400 text-sm mb-2 tracking-widest">IRIS SYSTEM ACTIVE</h2>
        <div id="logs" class="text-[10px] space-y-1">
            <p class="text-zinc-500">[SYSTEM] Initialisation...</p>
        </div>
    </div>

    <script>
        let map, fleet = {};
        const PCC_ID = 'IRIS-PCC-58-GLOBAL';

        function initMap() {
            map = L.map('map', { zoomControl: false }).setView([48.828, 2.327], 15);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png').addTo(map);
            logConsole("CARTE CHARGÉE - SECTEUR 58");
            
            // Lancement du récepteur PeerJS
            initP2P();
        }

        function logConsole(msg) {
            const logs = document.getElementById('logs');
            const time = new Date().toLocaleTimeString();
            logs.innerHTML = `<div>[${time}] ${msg}</div>` + logs.innerHTML;
        }

        function updateBus(id, lat, lon) {
            if (fleet[id]) {
                fleet[id].setLatLng([lat, lon]);
            } else {
                fleet[id] = L.circleMarker([lat, lon], {
                    color: '#0088ff', fillColor: '#0088ff', fillOpacity: 1, radius: 8
                }).addTo(map).bindTooltip(id, {permanent: true, direction: 'top'});
                logConsole(`UNITÉ ${id} EN LIGNE`);
            }
        }

        // Lecture du fichier JSON (Le "Moteur")
        async function fetchConfig() {
            try {
                const res = await fetch('iris_config.json?v=' + Date.now());
                const data = await res.json();
                data.fleet_status.forEach(bus => updateBus(bus.id, bus.lat, bus.lon));
            } catch (e) { console.log("Attente de données moteur..."); }
        }

        // Réception P2P (Le "Direct Chauffeur")
        function initP2P() {
            const peer = new Peer(PCC_ID);
            peer.on('connection', (conn) => {
                conn.on('data', (data) => {
                    if (data.type === 'position') {
                        updateBus(data.id, data.lat, data.lon);
                        logConsole(`GPS DIRECT : ${data.id}`);
                    }
                });
            });
        }

        window.onload = () => {
            initMap();
            fetchConfig();
            setInterval(fetchConfig, 10000); // Check toutes les 10s
        };
    </script>
</body>
</html>
